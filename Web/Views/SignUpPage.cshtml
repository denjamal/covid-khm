@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.SignUpPage>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = "Master.cshtml";
}


<!-- Header -->
@Html.Partial("Navigation", Model)

<!-- Main -->
@Model.RichTextEdidor
<section id="main" class="wrapper">
    <div id="form-main">
        <div id="form-div">
            <form class="form" id="form" name="form">

                <p>
                    <select class="category" name="category" id="type" onChange="formTypeChanged()">
                        <option value="">--Ким ви бажаєте стати--</option>
                        <option value="type_1">Лікар резерву</option>
                        <option value="type_2">Волонтер</option>
                        <option value="type_3">Постачальник</option>
                        <option value="type_4">Благодійник</option>
                    </select>
                </p>

                <p id="name">
                    <input name="personName" type="text" class="feedback-input" placeholder="Прізвище Ім'я Побатькові" />
                </p>

                <p id="phone">
                    <input name="phone" type="text" class="feedback-input" placeholder="Номер телефону" />
                </p>

                <p id="email">
                    <input name="email" type="text" class="feedback-input" placeholder="Ваш Email" />
                </p>

                <p id="age">
                    <input name="age" type="text" class="feedback-input" placeholder="Ваш вік" />
                </p>

                <p id="address">
                    <input name="homeAddress" type="text" class="feedback-input" placeholder="Домашня адреса" />
                </p>

                <p id="description">
                    <textarea id="description" name="Description" class="feedback-input" placeholder="Чим ви готові займатись"></textarea>
                </p>

                <button class="form-button"><span class="text-button">Відправити заявку</span></button>

            </form>
        </div>
    </div>
</section>

@section ChildScripts
{
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.1/dist/jquery.validate.min.js"></script>
    <script src="~/assets/js/signUp.js"></script>
}